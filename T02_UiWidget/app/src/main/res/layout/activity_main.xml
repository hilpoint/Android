<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.c.t02_uiwidget.MainActivity">

    <TextView
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:id="@+id/myTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="40dp"
        android:typeface="monospace" />
    <CheckBox
        android:id="@+id/myCheckBox"
        android:layout_alignLeft="@+id/myTextView"
        android:layout_below="@+id/myTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"/>

    <RadioGroup
        android:id="@+id/myRGroup"
        android:layout_below="@+id/myCheckBox"
        android:layout_alignLeft="@+id/myCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/myR1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:textSize="20dp"
            android:text="red"/>
        <RadioButton
            android:id="@+id/myR2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00ff00"
            android:textSize="20dp"
            android:text="green"/>
        <RadioButton
            android:id="@+id/myR3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0000ff"
            android:textSize="20dp"
            android:text="blue"/>
    </RadioGroup>
    <EditText
        android:id="@+id/myEdit"
        android:layout_below="@+id/myRGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/myButton"
        android:layout_below="@+id/myEdit"
        android:text="눌러봐"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
